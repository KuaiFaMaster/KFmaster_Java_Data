<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:gravity="center_vertical"
        android:orientation="vertical"
        tools:context=".MainActivity" >

   
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="doLogin"
        android:text="登录" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="doCreateRole"
        android:text="创建角色" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="doPostOrder"
        android:text="提交订单" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="doGameClick"
        android:text="游戏按钮点击" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="doUserUpgrade"
        android:text="玩家升级" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="doItemGet"
        android:text="获得道具" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="doItemConsume"
        android:text="使用道具" />
    
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="doItemBuy"
        android:text="购买道具" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="doStartLevel"
        android:text="开始关卡" />
    
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="doEndLevel"
        android:text="结束关卡" />
    
    
   

</LinearLayout>
</ScrollView>